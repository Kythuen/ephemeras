{
  "name": "ephemeras",
  "description": "Make development easier and more efficient.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kythuen/ephemeras.git"
  },
  "keywords": [
    "ephemeras",
    "tools"
  ],
  "author": {
    "name": "ephemeras",
    "email": "ephemeras@qq.com"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "docs:dev": "pnpm --filter=@ephemeras/docs run dev",
    "docs:build": "pnpm --filter=@ephemeras/docs run build",
    "test": "pnpm --filter ./packages/** run test",
    "test:coverage": "pnpm --filter ./packages/** run test:coverage",
    "change:add": "changeset",
    "change:version": "changeset version",
    "types": "tsc --noEmit",
    "format": "prettier --write --cache .",
    "build": "pnpm --filter ./packages/** build",
    "release": "pnpm --recursive --stream build && changeset publish"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "20.4.5",
    "@vitest/coverage-v8": "^2.1.5",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.15.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-vue": "9.31.0",
    "globals": "^15.12.0",
    "husky": "9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "15.2.10",
    "memfs": "^4.14.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "5.0.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  }
}
