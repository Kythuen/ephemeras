{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["esnext", "DOM"],
    "jsx": "preserve",
    "types": ["node", "vite/client", "vitest/importMeta"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ephemeras/fs/*": ["packages/fs/src/*"]
    }
  },
  "exclude": ["**/dist/**", "**/node_modules/**", "packages/linter/files/**"]
}
